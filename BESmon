- name: Install BESMon
  hosts: all
  become: true
  become_user: root
  gather_facts: no
tasks:
- name: Copy file with owner and permissions
  copy:
    src: /usr1/sysadmin/BesClientStatus.sh
    dest: /opt/BESMon/bin/BesClientStatus.sh
#    owner: foo
#    group: foo
#    mode: '0644'
- name: Copy file with owner and permissions
  copy:
    src: /usr1/sysadmin/runbesmon.sh
    dest: /opt/BESMon/bin/runbesmon.sh
#    owner: foo
#    group: foo
#    mode: '0644'
- name: ansible create directory example
  file:
    path: /var/opt/BESMon
    state: directory
- name: Every 5 minute
  cron:
    name: run script
    minute: "5"
    job: "/opt/bin/runBESMon.sh > /dev/md"
