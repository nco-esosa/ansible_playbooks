- name: BIGFIX Ansible install
  hosts: all
  become: true
  become_user: root
  gather_facts: no
tasks:
#- name: Stop the BigFix client process
#  service:
#    name: BESClient
#    state: stopped
- name: Yum install BESAgent
  yum:
    name: BESAgent
    state: latest
- name: Copy file with owner and permissions
  copy:
    src: /usr1/sysadmin/actionsite.afxm
    dest: /etc/opt/BESClient/actionsite.afxm
#    owner: foo
#    group: foo
# mode: '0644'
- name: Copy file with owner and permissions
  copy:
    src: /usr1/sysadmin/besclient.config
    dest: /var/opt/BESClient/besclient.config
#    owner: foo
#    group: foo
# mode: '0644'
- name: Copy file with owner and permissions
  copy:
    src: /usr1/sysadmin/besclient.config
    dest: /var/opt/BESClient/besclient.config.nco
#    owner: foo
#    group: foo
# mode: '0644'
- name: Copy file with owner and permissions
  copy:
    src: /usr1/sysadmin/dcid.skey
    dest: /opt/BESClient/bin/dcid.skey
#    owner: foo
#    group: foo
# mode: '0644'
- name: Start Big Fix client
  shell: /etc/init.d/besclient start

